<div class="row">
  <div class="medium-9 columns">
	<h1>Press</h1>
  </div>
  <div class="medium-3 columns align-right">
	<% if is_admin? %>
		<%= link_to 'Add Article', new_admin_article_path, class: "button top_button" %>
	<% end %>
  </div>
</div>
<div class="row">
  <div class="medium-12 columns">
	<table>
	  <thead>
	  <tr>
		<th class="date_col">Date</th>
		<th>Title of Article</th>
		<% if is_admin? %>
			<th colspan="2" class="action_col"></th>
		<% end %>
	  </tr>
	  </thead>
	  <tbody>
	  <% @articles.each do |article| %>
		  <tr>
			<td><%= article.published_date.strftime("%b %d, %Y") %></td>
			<td><%= article.title %></td>
			<% if is_admin? %>
				<td><%= link_to 'Edit', edit_admin_article_path(article) %></td>
				<td><%= link_to 'Delete', admin_article_path(article), method: :delete, data: {confirm: 'Are you sure?'} %></td>
			<% end %>
		  </tr>
	  <% end %>
	  </tbody>
	</table>
  </div>
</div>