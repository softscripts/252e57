<div class="row">
  <div class="medium-12 columns">
	<h1> Neighborhood Gallery Selection</h1>
  </div>
</div>

<div class="row">
  <div class="medium-12 columns">
	<%= form_tag set_neighborhood_admin_galleries_path do %>
		<div class="row">
		  <div class="medium-10 columns">
			<div class="form-inputs">
			  <%= select_tag(:gallery_id, options_from_collection_for_select(@galleries, "id", "title", Gallery.neighborhood.first.nil? ? '' : Gallery.neighborhood.first.id) , :prompt => "Please select Gallery for Neighborhood") %>
			</div>
		  </div>
		  <div class="medium-2 columns">
			<div class="form-actions">
			  <%= submit_tag 'Set Public', class: "button" %>
			</div>
		  </div>
		</div>
	<% end %>
  </div>
</div>