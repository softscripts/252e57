<div class="row">
  <div class="medium-9 columns">
	<h1>Galleries</h1>
  </div>
  <div class="medium-3 columns align-right">
	<% if is_admin? %>
		<%= link_to 'Add Gallery', new_admin_gallery_path, class: "button top_button" %>
	<% end %>
  </div>
</div>
<div class="row">
  <div class="medium-12 columns">
	<table>
	  <thead>
	  <tr>
		<th>Gallery Title</th>
		<th> # of images</th>
		<% if is_admin? %>
			<th colspan="2" class="action_col"></th>
		<% end %>
	  </tr>
	  </thead>
	  <tbody>
	  <% @galleries.each do |gallery| %>
		  <tr>
			<td><%= gallery.title %></td>
			<td><%= gallery.gallery_images.count %></td>
			<% if is_admin? %>
				<td><%= link_to 'Edit', edit_admin_gallery_path(gallery) %></td>
				<td><%= link_to 'Delete', admin_gallery_path(gallery), method: :delete, data: {confirm: 'Are you sure?'} %></td>
			<% end %>
		  </tr>
	  <% end %>
	  </tbody>
	</table>
  </div>
</div>