<div class="row">
  <div class="medium-9 columns">
	<h1>Public Site - Design Team/Developers Content</h1>
  </div>
  <div class="medium-3 columns align-right">
  </div>
</div>
<div class="row">
  <div class="medium-12 columns">
	<table>
	  <thead>
	  <tr>
		<th class="date_col">Section</th>
		<th>Subtitle</th>
		<th>Type</th>
		<% if is_admin? %>
			<th class="action_col"></th>
		<% end %>
	  </tr>
	  </thead>
	  <tbody>
	  <% @video_sections.each do |section| %>
		  <tr>
			<td><%= section.section %></td>
			<td><%= section.title %></td>
			<td><% if section.section_type=='designteam' %>Design Team<% end %><%if section.section_type=='developteam' %>Developers<% end %><%if section.section_type=='admin_welcome' %>Welcome Message (Admin)<% end %><%if section.section_type=='broker_welcome' %>Welcome Message (Broker)<% end %><%if section.section_type=='amenities' %>Amenities<% end %></td>
			<% if is_admin? %>
				<td><%= link_to 'Edit', edit_admin_video_section_path(section) %></td>
			<% end %>
		  </tr>
	  <% end %>
	  </tbody>
	</table>
  </div>
</div>
