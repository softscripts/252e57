<%= f.error_notification %>

<div class="form-inputs">
  <%= f.input :email %>
  <%= f.input :type, as: :radio_buttons,
			  collection: [[t('user.type.Admin'), :Admin],
									  [t('user.type.Broker'), :Broker]],
			  checked: @user.type ? @user.type : []
  %>
  <%= f.input :password %>
</div>

<div class="form-actions">
  <%= f.button :submit,"Add User", class: "button" %>
  <%= link_to 'Back', admin_users_path, class: "button" %>
</div>

