	<% @design.each do |design| %>
		<% if design.section_type == 'developteam' %>
		<div data-id="<%= design.id %>">
		  <h2><%= design.title %></h2>
		  <%= raw design.body %>
		</div>
		<% end %>
	<% end %>
	</div>
  <div class="center-content">
