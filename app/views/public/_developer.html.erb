<div id="screen-developers" class="overlay-view">
  <div class="center-content">
	<ul id="developer-list">
		<% @design.each do |design| %>
			<% if design.section_type == 'developteam' %>
		  <li class="developer-content" data-id="<%= design.id %>">
			<h2><%= design.title %></h2>
			<%# terrebli thing may happen if unlucky and it substring in the midle of html%>
			<% truncate = design.body[0..250] %>
			<% last_space = truncate.rindex(" ") %>
			<%= raw truncate[0 .. last_space] %> ...</p>
			<a href="#" id="developer-content-a-<%= design.id %>" >Read More</a>
		  </li>
			<% end %>
	  <% end %>
	</ul>
  </div>
  <div class="content-title">Developers</div>
  <div class="back-to-video">
	<span><img src="<%= asset_path("back_arrow.png") %>"> Back <span class="to-film">to Film</span></span>
  </div>
</div>
